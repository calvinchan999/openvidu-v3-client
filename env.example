# Robot Audio Recorder Launcher Configuration (for launcher.js)
# This file is for the GUI Puppeteer launcher (launcher.js)
# Copy this to .env for local development

# Website URL to launch (change port if needed)
WEBSITE_URL=http://localhost:8080

# Chrome executable path (uncomment and modify if needed)
# CHROME_PATH=/usr/bin/google-chrome-stable
# CHROME_PATH=/Applications/Google Chrome.app/Contents/MacOS/Google Chrome
# CHROME_PATH=C:\Program Files\Google\Chrome\Application\chrome.exe

# Robot configuration (optional - these can override dashboard-config.json)
ROBOT_ID=robot-001
SERVER_ENDPOINT=https://arcs-openvidu-vm.eastasia.cloudapp.azure.com/application-server

# Browser settings
HEADLESS=true
AUTO_RESTART=true
HEALTH_CHECK_INTERVAL=30000

# Retry settings
MAX_RETRIES=20
RETRY_DELAY=60000

# Debug settings
DEBUG=false
CONSOLE_LOGGING=true

# Headless launcher specific settings (for headless-launcher.js)
# Set HEADLESS=false to run with GUI for debugging
# HEADLESS=true

# Docker user configuration (for audio access)
# Set these to match your host user: run 'id $USER' to get values
# DOCKER_USER_ID=1000
# DOCKER_GROUP_ID=1000