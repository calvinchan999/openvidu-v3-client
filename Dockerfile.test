    bash \
    curl \
    alsa-utils \
    alsa-lib \
    alsa-lib-dev \
    pulseaudio \
    pulseaudio-utils \
    nano \
    dbus \
    dbus-x11 \
    sox \
    ffmpeg \
    ca-certificates

