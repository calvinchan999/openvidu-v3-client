# Docker Environment Configuration for Robot Audio Recorder

# Application Settings
NODE_ENV=production
PORT=8080

# Robot Configuration
ROBOT_ID=robot-docker-001
SESSION_NAME=DockerSession

# Headless Browser Settings
WEBSITE_URL=http://localhost:8080
ENABLE_LOGGING=true
KEEP_ALIVE=true
RECONNECT_DELAY=5000
MAX_RECONNECT_ATTEMPTS=10

# Chrome/Puppeteer Settings
CHROME_BIN=/usr/bin/google-chrome-stable
PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true
PUPPETEER_EXECUTABLE_PATH=/usr/bin/google-chrome-stable
DISPLAY=:99

# OpenVidu Server Configuration (update these values)
OPENVIDU_SERVER_URL=https://arcs-openvidu-vm.eastasia.cloudapp.azure.com
OPENVIDU_SERVER_SECRET=your_secret_here

# Audio Settings
ENABLE_AUDIO_DEVICES=true
DEFAULT_AUDIO_DEVICE=
DEFAULT_AUDIO_OUTPUT_DEVICE=

# Logging
LOG_LEVEL=info
LOG_TO_FILE=true
LOG_DIR=/app/logs

# Health Check
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000

# Performance Tuning
MAX_OLD_SPACE_SIZE=4096
MEMORY_PRESSURE_OFF=true
